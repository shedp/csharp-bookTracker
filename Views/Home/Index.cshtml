@{
    ViewData["Title"] = "Home Page";
    var name = "Sheena";
    var markup = "<b>Hello</b>";

    string[] books = {"Pride & Predijuice", "Memoirs of Sherlock Holmes", "To the Lighthouse"};
    int edges = 4;
}

<div class="text-center">
    <h1 class="display-4">Welcome to BookTrack</h1>
    <p>Welcome to BookTrack.</br>An app where you can enter books you have read or are on you're shelf.</p>
</div>

<p>@DateTime.Now.ToString()</p>
<p>@name</p>
<p>@Html.Raw(markup)</p>
<ol>
    @for(int i=0; i < 3; i++)
    {
        <li>@books[i]</li>
    }
</ol>
<ol>
    @foreach(string book in books)
    {
        <li>@book</li>
    }
</ol>

@if (edges == 8)
{
    <p>Welcome, you are authenticated!</p>
}
else
{
    <p>You are not authenticated. Please log in.</p>
}